<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="295dp"
    android:padding="9dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/profile_image_message"
        android:src="@drawable/profile"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_txt_message"
        android:layout_toRightOf="@id/profile_image_message"
        android:layout_marginLeft="6dp"
        android:text="testing msg"
        android:textSize="20sp"
        android:padding="8dp"
        android:background="@drawable/background_left"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/left_image_view"
        android:layout_toRightOf="@+id/profile_image"
        android:layout_marginLeft="6dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_seen"
        android:visibility="gone"
        android:layout_below="@id/show_txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>